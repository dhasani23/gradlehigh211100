tasks.register('singleTest', Test) {
    useJUnitPlatform()
    testLogging {
        events "passed", "skipped", "failed"
        exceptionFormat "full"
        showExceptions true
        showCauses true
        showStackTraces true
    }
    filter {
        includeTestsMatching "com.ecommerce.root.service.ProductServiceClientTest"
    }
}